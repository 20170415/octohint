{
  "manifest_version": 2,
  "name": "Octohint",
  "version": "1.3.0",
  "description": "IntelliSense for GitHub, GitLab and Bitbucket",
  "homepage_url": "https://github.com/pd4d10/octohint",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "dist/sentry.js",
      "dist/ts-lib.js",
      "dist/background.js"
    ]
  },
  "permissions": [
    "storage",
    "https://github.com/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_title": "Google Mail"
  },
  "options_page": "dist/options.html",
  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": true
  }
}
