{
  "manifest_version": 2,
  "name": "IntelliOcto",
  "version": "1.0.0",
  "description": "IntelliSense for GitHub, GitLab and Bitbucket",
  "homepage_url": "https://github.com/pd4d10/intelli-octo",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "dist/sentry.js",
      "dist/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "dist/sentry.js",
        "dist/github.js"
      ],
      "run-at": "document_idle"
    },
    {
      "matches": [
        "https://gitlab.com/*"
      ],
      "js": [
        "dist/sentry.js",
        "dist/gitlab.js"
      ],
      "run-at": "document_idle"
    },
    {
      "matches": [
        "https://bitbucket.org/*"
      ],
      "js": [
        "dist/sentry.js",
        "dist/bitbucket.js"
      ],
      "run-at": "document_idle"
    }
  ]
}
